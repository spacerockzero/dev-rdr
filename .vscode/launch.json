  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mocha tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/functions/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["-t", "10000", "test/*-test.js"],
      "cwd": "${workspaceRoot}/functions/",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "sourceMaps": false,
      "outFiles": []
    }
  ]
}
